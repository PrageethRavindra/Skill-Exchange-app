<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resourcePeopleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resource People"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <TextView
            android:id="@+id/resourcePerson1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Dr. Jane Doe: Expert in Data Science"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/resourcePerson2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Mr. John Smith: Android Development Guru"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/resourcePerson3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Ms. Emily Johnson: Web Development Specialist"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

    </LinearLayout>
</ScrollView>
