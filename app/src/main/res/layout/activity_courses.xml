<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coursesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courses"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Course 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/box_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/course1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Development"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/course1Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn the basics of Android Development including Kotlin and Jetpack Compose."
                android:paddingTop="4dp"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/course1Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.5"
                android:paddingTop="8dp"
                android:layout_gravity="start" />
        </LinearLayout>

        <!-- Course 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/box_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/course2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Development"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/course2Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master front-end and back-end development with HTML, CSS, JavaScript, and Node.js."
                android:paddingTop="4dp"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/course2Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.8"
                android:paddingTop="8dp"
                android:layout_gravity="start" />
        </LinearLayout>

        <!-- Course 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/box_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/course3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Science"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/course3Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore the world of data with Python, machine learning, and AI techniques."
                android:paddingTop="4dp"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/course3Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.7"
                android:paddingTop="8dp"
                android:layout_gravity="start" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
